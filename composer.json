{
    "type": "project",
    "license": "proprietary",
    "require": {
        "bolt/core": "^4.0",
        "bolt/assets": "^4.0",
        "bolt/themes": "^3.0",
        "symfony/flex": "^1.2",
        "bolt/newswidget": "^1.0",
        "bobdenotter/weatherwidget": "^1.0",
        "nicolus/picofeed": "^0.1.42",
        "bolt/forms": "dev-master",
        "bobdenotter/configuration-notices": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-install-cmd": [
            "php bin/console extensions:configure --with-config",
            "@auto-scripts",
            "php bin/console bolt:info"
        ],
        "post-update-cmd": [
            "php bin/console extensions:configure",
            "@auto-scripts",
            "php bin/console bolt:info"
        ],
        "auto-scripts": {
            "cache:clear --no-warmup": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd"
        },
        "periodical-tasks": [
            "security-checker security:check"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "^5.1"
        },
        "public-dir": "public"
    }
}
