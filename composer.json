{
    "type": "project",
    "license": "proprietary",
    "require": {
        "bolt/core": "^4.0",
        "bolt/assets": "^4.0@beta",
        "bolt/themes": "^3.0",
        "symfony/flex": "^1.2",
        "bolt/newswidget": "^1.0",
        "bobdenotter/weatherwidget": "^1.0"
    },
    "require-dev": {
        "doctrine/doctrine-fixtures-bundle": "^3.1",
        "symfony/debug-bundle": "^4.3",
        "symfony/dotenv": "^4.3",
        "symfony/maker-bundle": "^1.11",
        "symfony/stopwatch": "^4.3",
        "symfony/web-profiler-bundle": "^4.3",
        "symfony/web-server-bundle": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "bolt:copy-assets": "symfony-cmd"
        },
        "post-create-project-cmd": [
            "cp -n .env.dist .env || true",
            "rm public/.gitignore translations/.gitignore"
        ],
        "post-install-cmd": [
            "php bin/console bolt:copy-themes",
            "@auto-scripts",
            "php bin/console bolt:info"
        ],
        "post-update-cmd": [
            "@auto-scripts",
            "php bin/console bolt:info"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "^4.3"
        }
    }
}
